      <VBox alignment="CENTER" prefHeight="650.0" prefWidth="1000.0" styleClass="GameBack" BorderPane.alignment="CENTER">
         <children>
            <GridPane id="Board" fx:id="Board" alignment="CENTER" hgap="20.0" prefHeight="589.0" prefWidth="943.0" vgap="20.0" VBox.vgrow="ALWAYS">

